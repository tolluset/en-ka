{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "push": true,
    "pushTags": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "draft": false,
    "preRelease": false,
    "autoGenerate": true
  },
  "npm": {
    "publish": true,
    "skipChecks": false
  },
  "hooks": {
    "before:init": ["pnpm lint:type-check", "pnpm build"],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}